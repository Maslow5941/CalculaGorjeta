<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:foregroundGravity="center_horizontal"
    android:orientation="horizontal"
    app:layout_anchorGravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/gorjeta" />

    <EditText
        android:id="@+id/editTextValor"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/editTextPorcentagem"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="0%"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextValor" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Total"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="20dp"
        android:text="R$ 0.00"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Gorjeta"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPorcentagem" />

    <TextView
        android:id="@+id/textViewGorjeta"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="20dp"
        android:text="R$ 0.00"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPorcentagem" />

    <SeekBar
        android:id="@+id/seekBarGorjeta"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:max="100"
        app:layout_constraintStart_toEndOf="@+id/editTextPorcentagem"
        app:layout_constraintTop_toBottomOf="@+id/editTextValor" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>